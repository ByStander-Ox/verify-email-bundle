<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="symfonycasts.verify_user.signing_wrapper" class="SymfonyCasts\Bundle\VerifyUser\Util\UriSigningWrapper" public="false">
            <argument>%kernel.secret%</argument>
        </service>

        <service id="symfonycasts.verify_user.query_utility" class="SymfonyCasts\Bundle\VerifyUser\Util\QueryUtility" public="false" />

        <service id="SymfonyCasts\Bundle\VerifyUser\VerifyHelperInterface" alias="symfonycasts.verify_user.helper" />
        <service id="symfonycasts.verify_user.helper" class="SymfonyCasts\Bundle\VerifyUser\VerifyHelper">
            <argument type="service" id="symfonycasts.verify_user.token_generator" />
            <argument /> <!-- verify user signature lifetime -->
        </service>
    </services>
</container>
