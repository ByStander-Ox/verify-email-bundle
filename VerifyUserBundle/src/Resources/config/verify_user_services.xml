<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="symfonycasts.verify_user.token_generator" class="SymfonyCasts\Bundle\VerifyUser\Generator\TokenGenerator" public="false">
            <argument>%kernel.secret%</argument>
        </service>

        <service id="SymfonyCasts\Bundle\VerifyUser\VerifierHelperInterface" alias="symfonycasts.verify_user.helper" />
        <service id="symfonycasts.verify_user.helper" class="SymfonyCasts\Bundle\VerifyUser\VerifierHelper">
            <argument type="service" id="symfonycasts.verify_user.token_generator" />
        </service>
    </services>

</container>